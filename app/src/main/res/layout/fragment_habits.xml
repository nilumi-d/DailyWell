<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Section -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                app:title="@string/habits_title"
                app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                app:titleTextColor="@color/text_primary" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Progress Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/card_corner_radius_large"
            app:cardElevation="@dimen/card_elevation_medium"
            app:cardBackgroundColor="@color/card_habit"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_headline_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_progress_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="0 of 0 habits completed"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body_medium"
                    tools:text="3 of 5 habits completed" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_bar_daily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:progress="60"
                    app:trackCornerRadius="4dp"
                    app:trackThickness="8dp"
                    app:indicatorColor="@color/progress_complete"
                    app:trackColor="@color/progress_incomplete" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Habits List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Habits"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_headline_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_habit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 habits"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body_medium"
                tools:text="5 habits" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_habits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="80dp"
            tools:listitem="@layout/item_habit" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_huge"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/card_habit">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:padding="@dimen/spacing_large"
                    android:src="@drawable/ic_habits"
                    app:tint="@color/primary" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="No habits yet"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_headline_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:gravity="center"
                android:text="Start building healthy habits by tapping the + button"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body_medium" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_large"
        android:contentDescription="@string/add_habit"
        android:text="@string/add_habit"
        android:textColor="@color/on_primary"
        app:backgroundTint="@color/primary"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/on_primary"
        app:elevation="@dimen/card_elevation_large" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>